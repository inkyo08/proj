cxx.std = c++20

using cxx

hxx{*}: extension = h
cxx{*}: extension = cc

if ($cxx.class == 'msvc')
{

}
else
{
  cxx.poptions += -DDEBUG -Isrc

  cxx.coptions += \
    -Wall -Wextra -Werror \
    -O3 -march=native -mtune=native -flto -ffast-math -funroll-loops -fomit-frame-pointer \
    -fno-exceptions -fno-rtti \
    -pthread

  cxx.loptions += -flto
}
